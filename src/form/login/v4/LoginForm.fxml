<AnchorPane fx:id="mainPane" prefHeight="480.0" prefWidth="640.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="form.login.v4.Controller">
   <children>
      <VBox alignment="CENTER" prefHeight="480.0" prefWidth="185.0" spacing="10.0" styleClass="UserInfoPane">
         <children>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="5.0">
               <children>
                  <ImageView fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@resources/user.png" />
                     </image>
                     <effect>
                        <ColorAdjust brightness="0.36" contrast="0.02" hue="-0.03" saturation="-0.3" />
                     </effect>
                  </ImageView>
                  <Label fx:id="idLabel" text="ID">
                     <effect>
                        <DropShadow offsetY="4.0">
                           <color>
                              <Color opacity="0.6000000238418579" />
                           </color>
                        </DropShadow>
                     </effect>
                  </Label>
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#setOnLogout" text="로그아웃" />
