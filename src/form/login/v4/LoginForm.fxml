                              <Label text="ID">
                                 <effect>
                                    <DropShadow offsetY="4.0">
                                       <color>
                                          <Color opacity="0.6000000238418579" />
                                       </color>
                                    </DropShadow>
                                 </effect>
                              </Label>
                              <TextField fx:id="idField" alignment="CENTER" promptText="ID 입력">
                                 <effect>
                                    <DropShadow offsetY="2.0">
                                       <color>
                                          <Color opacity="0.15000000596046448" />
